                    @Html.ActionLink("Şikayetler", "ListOfComplains", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-medkit">&nbsp; &nbsp;</em>İlaç</button>
                <div style="width: 100% !important" class="children content">
                    @Html.ActionLink("İlaç Ekle", "AddMedicine", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("İlaçları Listele", "ListOfMedicine", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-ambulance">&nbsp; &nbsp;</em>Ambulans</button>
                <div style="width: 100% !important" class="children content">
                    @Html.ActionLink("Ambulans Ekle", "AddAmbulance", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Ambulansları Listele", "ListOfAmbulances", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Sürücü Ekle", "AddAmbulanceDriver", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Sürücüleri Listele", "ListOfAmbulanceDrivers", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Yol Düzenle", "FindOptimalPath", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })                    
                    </div>
