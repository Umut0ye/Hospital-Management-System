                    @Html.ActionLink("Bölüm Ekle", "AddDepartment", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Bölümleri Listele", "DepartmentList", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-user-md">&nbsp; &nbsp;</em>Doktor</button>
                <div style="width: 100% !important" class="children content">
                    @Html.ActionLink("Doktor Ekle", "AddDoctor", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Doktorları Listele", "ListOfDoctors", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-user-o">&nbsp; &nbsp;</em>Hasta</button>
                <div style="width: 100% !important" class="children content">
                    @Html.ActionLink("Hastaları Listele", "ListOfPatients", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-calendar-check-o">&nbsp; &nbsp;</em>Takvim</button>
                <div style="width: 100% !important" class="children content">
