                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-bullhorn">&nbsp; &nbsp;</em>Duyuru</button>
                <div style="width: 100% !important" class="children content">
                    @Html.ActionLink("Duyuru Ekle", "AddAnnouncement", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Duyuruları Listele", "ListOfAnnouncement", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                </div>
            </li>
            <li>
                <button class="collapsible"><em class="fa fa-pencil-square-o">&nbsp; &nbsp;</em>Randevu</button>
                <div style="width: 100% !important" class="children content">
                    @Html.ActionLink("Randevu Ekle", "AddAppointment", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
                    @Html.ActionLink("Aktif Randevular", "ListOfAppointments", "Admin", null, new { @class = "list-group-item", @style = "margin: 0px -20px; font-size: 13px" })
